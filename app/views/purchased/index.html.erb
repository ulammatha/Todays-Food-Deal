<% if @payments.present? %>
  <table class="table table-striped">
    <tr>
      <th>Deal Name</th>
      <th>Date Purchased</th>
      <th>Amount</th>
    </tr>
    <% @payments.each do |payment| %>
      <tr>
        <td> <%= payment.deal.name %></td>
        <td><%= payment.updated_at.to_formatted_s(:long) %></td>
        <td><%= payment.deal.current_amount %></td>
      </tr>
    <% end %>
  </table>
<% end %>
