<%= javascript_include_tag 'modal_on_page_load' %>
<div class="modal fade", id="myModal">
  <div class="modal-header">
    <h4 class="modal-title">Final step to finish the sign up</h4>
  </div>
  <%= simple_form_for(@user, url: twitter_users_path, method: :post, html: { multipart: true}) do |f| %>
    <div class="modal-body">
      <p>Please provide an Email address</p>
        <%= f.input :email, as: :email, input_html: {class: 'form-control'}, label: 'Email' %>
        <%= f.input :password, :as => :hidden, :input_html => { value: @user.password } %>
        <%= f.input :name, :as => :hidden, :input_html => { value: @user.name} %>
        <%= f.input :image, :as => :hidden, :input_html => { value: @user.image} %>
        <%= f.input :uid, :as => :hidden, :input_html => { value: @user.uid} %>
        <%= f.input :provider, :as => :hidden, :input_html => { value: 'twitter'} %>
      </div>
    <div class="modal-footer">
     <%= f.button :submit, "Submit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>