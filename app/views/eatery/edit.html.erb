<%= simple_form_for(@eatery,url: {controller: "eatery", action: "update"}, html: { multipart: true}) do |f| %>
    <div class="unit jumborton-bg">
    <h2> Edit Restaurant </h2>
    <%= render partial: "eatery", locals: {f: f} %>
    <div class="row">
      <div class='form-group col-xs-2'>
      <%= submit_tag "Update", data: { confirm: "Are you sure you want to submit" }, class: "btn btn-success btn-lg" %>
      </div>
      <div class='form-group col-xs-2'>
      <%= link_to "Cancel",root_url, class:"btn btn-warning btn-lg" %>
      </div>
    </div>
  </div>
<% end %>