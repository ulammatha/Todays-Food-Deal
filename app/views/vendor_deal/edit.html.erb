<%= simple_form_for(@deal,url: vendor_deal_path ) do |f| %>
  <div class="span-center">
    <h2> Update Deal </h2>
    <div class="row">
      <div class='form-group col-xs-4'>
        <%= f.input :name,  input_html: {class: 'form-control'}, label: 'Recipe Name' %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-xs-8'>
        <%= f.input :description, as: :text, input_html: {class: 'form-control'}, label: 'Description' %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-xs-4'>
        <%= f.input :current_amount, input_html: {class: 'form-control'}, label: 'Current Amount' %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-xs-4'>
        <%= f.input :previous_amount, input_html: {class: 'form-control'}, label: 'Previous Amount' %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-xs-4'>
        <%= f.input :expiry, as: :string, input_html: {class: 'form-control', id: 'datepicker'}, label: 'Exipry' %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-xs-4'>
          <%= f.input :available_coupons, input_html: {class: 'form-control'}, label: 'Available Coupons' %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-xs-4'>
       <%= f.input :image, as: :file,  label: 'Recipe Image' %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-xs-4'>
       <%= f.input :eatery_id, as: :select, collection: @eateries, label_method: :eatery_name, label: 'Restaurant', include_blank: 'Select a Restaurant' %>

      </div>
    </div>

    <div class="row">
      <div class='form-group col-xs-2'>
      <%= submit_tag "Update", data: { confirm: "Are you sure you want to submit" }, class: "btn btn-success btn-lg" %>
      </div>
      <div class='form-group col-xs-2'>
      <%= link_to "Cancel",root_url, class:"btn btn-warning btn-lg" %>
      </div>
    </div>
  <% end %>